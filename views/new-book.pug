extends layout

block content 

      h1 New Book
      include form-error.pug
      form(method="post") 
        p 
          label(for="title") Title 
          if  errorsPath 
            input(name="title" type="text" id="title" value=`${title}`) 
          else 
            input(name="title" type="text" id="title") 
        p 
          label(for="author") Author 
          if errorsPath 
            input(name="Author" type="text" id="author" value=`${author}`)
          else 
            input(name="Author" type="text" id="author")
        p 
          label(for="genre") Genre 
          if errorsPath
            input(name="genre" type="text" id="genre" value=`${genre}`)
          else
            input(name="genre" type="text" id="genre")
        p 
          label(for="year") Year 
          if errorsPath 
            input(name="year" type="text" id="year" value=`${year}`) 
          else 
            input(name="year" type="text" id="year")
        p 
          input(type="submit" value="Create New Book")
        p 
          a.button(href="/") Cancel  